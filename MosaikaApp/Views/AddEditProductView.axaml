<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:views="using:MosaikaApp.Views"
			 mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="700"
			 x:Class="MosaikaApp.Views.AddEditProductView"
			 x:DataType="views:AddEditProductView">
	<StackPanel Spacing="10" Margin="20">
		<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
			<Image Source="/Assets/Mosaika.png" Width="30" Height="30"/>
			<TextBlock Name="HeaderTextBlock" Text="Добавление нового продукта" FontSize="20" FontWeight="Bold"/>
			<TextBlock Name="ProductNameTextBlock" Foreground="#546F94" FontSize="20" FontWeight="Bold"/>
		</StackPanel>

		<Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" >
			<TextBlock Grid.Row="0" Grid.Column="0" Text="Артикул:" VerticalAlignment="Center" Margin="0,0,10,0"/>
			<TextBox   Grid.Row="0" Grid.Column="1" Name="ArticleTextBox" Watermark="Введите артикул" Margin="0,5,0,5" />

			<TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование:" VerticalAlignment="Center" Margin="0,0,10,0"/>
			<TextBox   Grid.Row="1" Grid.Column="1" Name="NameTextBox" Watermark="Введите наименование" Margin="0,5,0,5"/>

			<TextBlock Grid.Row="2" Grid.Column="0" Text="Тип продукта:" VerticalAlignment="Center" Margin="0,0,10,0"/>
			<ComboBox  Grid.Row="2" Grid.Column="1" Name="ProductTypeComboBox" Width="300"
					   ItemsSource="{Binding ProductTypes}" Margin="0,5,0,5"
					   DisplayMemberBinding="{Binding Name}"/>

			<TextBlock Grid.Row="3" Grid.Column="0" Text="Мин. стоимость для партнера:" VerticalAlignment="Center" Margin="0,0,10,0"/>
			<TextBox   Grid.Row="3" Grid.Column="1" Name="MinCostTextBox" Watermark="Введите стоимость" Margin="0,5,0,5"/>
			<TextBlock Grid.Row="3" Grid.Column="2" Text="рублей" VerticalAlignment="Center" Margin="5,0,0,0"/>

			<TextBlock Grid.Row="4" Grid.Column="0" Text="Ширина рулона:" VerticalAlignment="Center" Margin="0,0,10,0"/>
			<TextBox   Grid.Row="4" Grid.Column="1" Name="RollWidthTextBox" Watermark="Введите ширину" Margin="0,5,0,5"/>
			<TextBlock Grid.Row="4" Grid.Column="2" Text="метров" VerticalAlignment="Center" Margin="5,0,0,0"/>

			<TextBlock Grid.Row="5" Grid.Column="0" Text="Состав и стоимость:" VerticalAlignment="Center" Margin="0,10,10,0"/>
			<StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="15" Margin="0,10,0,0">
				<TextBlock Name="CalculatedCostTextBlock" Text="0,00 p" VerticalAlignment="Center" FontWeight="Bold"/>
				<Button Content="Выбрать материалы" Click="SelectMaterials_Click"/>
			</StackPanel>
		</Grid>

		<Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Right" Margin="0,20,0,0"/>
	</StackPanel>
</UserControl>